<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.apigee.oauth2.grantTypeActivities.PasswordGrantTypeActivity">

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pPasswordHeaderTextView"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Access Token:"
        android:id="@+id/pAccessTokenHeaderTextView"
        android:textStyle="bold"
        android:layout_below="@+id/pPasswordHeaderTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_available"
        android:id="@+id/pAccessTokenTextView"
        android:layout_below="@+id/pAccessTokenHeaderTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:maxWidth="250dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address:"
        android:id="@+id/pEmailHeaderTextView"
        android:textStyle="bold"
        android:layout_below="@+id/pAccessTokenTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_available"
        android:id="@+id/pEmailTextView"
        android:layout_below="@+id/pEmailHeaderTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Email Address"
        android:id="@+id/pGetEmailAddressButton"
        android:layout_below="@+id/pGetAccessTokenButton"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Access Token"
        android:id="@+id/pGetAccessTokenButton"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/pClearDataButton"
        android:layout_alignRight="@+id/pGetEmailAddressButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Data"
        android:id="@+id/pClearDataButton"
        android:layout_below="@+id/pEmailTextView"
        android:layout_alignRight="@+id/pAccessTokenHeaderTextView"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Using Apigee)"
        android:id="@+id/pWhichApiUtilized"
        android:layout_below="@+id/pPasswordHeaderTextView"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrieve Store"
        android:id="@+id/pRetrieveTokenButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Store"
        android:id="@+id/pDeleteStoreButton"
        android:layout_alignTop="@+id/pRetrieveTokenButton"
        android:layout_toRightOf="@+id/pRetrieveTokenButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store Token"
        android:id="@+id/pStoreTokenButton"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/pRetrieveTokenButton" />

</RelativeLayout>
