<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.apigee.eventmanager.CreateEventActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Event"
        android:id="@+id/textView"
        android:layout_marginTop="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/eventNameEditText"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:hint="Event Name"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="6"
        android:id="@+id/cityEditText"
        android:hint="City"
        android:layout_below="@+id/eventNameEditText"
        android:layout_alignLeft="@+id/eventNameEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="4"
        android:id="@+id/stateEditText"
        android:hint="State"
        android:maxLength="2"
        android:layout_alignTop="@+id/cityEditText"
        android:layout_alignRight="@+id/eventNameEditText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelButton"
        android:layout_below="@+id/publicSwitch"
        android:layout_alignLeft="@+id/cityEditText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/addEventButton"
        android:layout_alignTop="@+id/cancelButton"
        android:layout_alignRight="@+id/stateEditText" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public"
        android:id="@+id/publicSwitch"
        android:layout_below="@+id/cityEditText"
        android:layout_centerHorizontal="true"
        android:checked="true" />

</RelativeLayout>
